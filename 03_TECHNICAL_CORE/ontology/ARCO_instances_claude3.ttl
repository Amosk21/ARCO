@prefix :    <https://arco.ai/ontology/core#> .
@prefix bfo: <http://purl.obolibrary.org/obo/BFO_> .
@prefix cco: <http://www.ontologyrepository.com/CommonCoreOntologies/> .
@prefix ro:  <http://purl.obolibrary.org/obo/RO_> .
@prefix iao: <http://purl.obolibrary.org/obo/IAO_> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<https://arco.ai/ontology/instances/claude3> rdf:type owl:Ontology ;
  rdfs:label "ARCO Claude 3 Instances — Evidence-Only (Option B)" ;
  rdfs:comment "Claude 3 instance layer modeled under Option B rigor: software artifacts are ICEs; dispositions are borne by material infrastructure. No biometric capability is asserted from generic vision or refusal text." ;
  owl:imports <https://arco.ai/ontology/governance> .

#################################################################
# 1) REGULATORY CONTENT (representation-side)
#################################################################

:EUAIAct_AnnexIII rdf:type :RegulatoryContent ;
  rdfs:label "EU AI Act Annex III — High-Risk AI Systems" .

:EUAIAct_Article50 rdf:type :RegulatoryContent ;
  rdfs:label "EU AI Act Article 50 — Transparency for AI-Generated Content" .

:EUAIAct_ChapterV rdf:type :RegulatoryContent ;
  rdfs:label "EU AI Act Chapter V — GPAI Obligations" .

#################################################################
# 2) SYSTEM + MATERIAL INFRASTRUCTURE (reality-side)
#################################################################

:Claude3_System rdf:type :System ;
  rdfs:label "Claude 3 System" ;
  bfo:0000051 :Claude3_InferenceInfrastructure .

:Claude3_InferenceInfrastructure rdf:type :HardwareComponent ;
  rdfs:label "Claude 3 Inference Infrastructure" ;
  rdfs:comment "Material compute infrastructure that concretizes deployed software artifacts. Capability claims are asserted only when documentation supports them and are kept non-biometric unless explicit evidence says otherwise." ;
  ro:0000091 :Claude3_TextGenerationCapability ,
             :Claude3_StaticImageUnderstandingCapability ,
             :Claude35_ComputerUseCapability .

:Claude3_TextGenerationCapability rdf:type :CapabilityDisposition ;
  rdfs:label "Claude Text Generation Capability" ;
  rdfs:comment "Evidence-bounded disposition for general language generation and transformation tasks as documented in model-card style capability reporting." .

:Claude3_StaticImageUnderstandingCapability rdf:type :CapabilityDisposition ;
  rdfs:label "Claude Static Image Understanding Capability" ;
  rdfs:comment "Evidence-bounded disposition for static-image interpretation tasks (e.g., document/chart/question answering). Does not assert person identification capability." .

:Claude35_ComputerUseCapability rdf:type :CapabilityDisposition ;
  rdfs:label "Claude 3.5 Computer Use Capability" ;
  rdfs:comment "Evidence-bounded disposition for screenshot-mediated computer interaction as described in addendum artifacts. Not asserted as critical-infrastructure-specific control capability." .

#################################################################
# 3) SOFTWARE ARTIFACTS (Option B: representation-side ICE)
#################################################################

:Claude3_Opus_SoftwareArtifact rdf:type :SoftwareArtifact ;
  rdfs:label "Claude 3 Opus Software Artifact" ;
  rdfs:comment "Software artifact descriptor for Claude 3 Opus." ;
  iao:0000136 :Claude3_System .

:Claude3_Sonnet_SoftwareArtifact rdf:type :SoftwareArtifact ;
  rdfs:label "Claude 3 Sonnet Software Artifact" ;
  iao:0000136 :Claude3_System .

:Claude3_Haiku_SoftwareArtifact rdf:type :SoftwareArtifact ;
  rdfs:label "Claude 3 Haiku Software Artifact" ;
  iao:0000136 :Claude3_System .

:Claude35_Sonnet_SoftwareArtifact rdf:type :SoftwareArtifact ;
  rdfs:label "Claude 3.5 Sonnet Software Artifact" ;
  iao:0000136 :Claude3_System .

#################################################################
# 4) PROVIDER + DOCUMENTATION WORKFLOW
#################################################################

:Anthropic rdf:type :ProviderOrganization ;
  rdfs:label "Anthropic" ;
  ro:0000087 :Anthropic_ProviderRole .

:Anthropic_ProviderRole rdf:type :ProviderRole ;
  rdfs:label "Anthropic Provider Role" ;
  ro:0000052 :Anthropic .

:Claude3_ModelCard rdf:type :AssessmentDocumentation ;
  rdfs:label "Claude 3 Model Card (evidence artifact)" ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :EUAIAct_ChapterV ;
  iao:0000136 :EUAIAct_Article50 .

:Claude35_ComputerUse_Addendum rdf:type :AssessmentDocumentation ;
  rdfs:label "Claude 3.5 Computer Use Addendum (evidence artifact)" ;
  rdfs:comment "Documents screenshot-based computer interaction capability claims as evidence artifacts." ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :Claude35_ComputerUseCapability .

:Claude3_CapabilityEvidenceNote rdf:type :AssessmentDocumentation ;
  rdfs:label "Claude Capability Evidence Note" ;
  rdfs:comment "Documents evidenced capability claims (general-purpose use, content generation, computer-use) without asserting biometric identification capability." ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :Claude3_TextGenerationCapability ;
  iao:0000136 :Claude3_StaticImageUnderstandingCapability ;
  iao:0000136 :Claude35_ComputerUseCapability ;
  iao:0000136 :EUAIAct_Article50 ;
  iao:0000136 :EUAIAct_ChapterV .

:Claude3_AssessmentProcess rdf:type :AssessmentDocumentationProcess ;
  rdfs:label "Claude 3 ARCO Assessment Process" ;
  ro:0000057 :Claude3_System ;
  ro:0000057 :Anthropic ;
  cco:has_output :Claude3_AssessmentDoc .

:Claude3_AssessmentDoc rdf:type :AssessmentDocumentation ;
  rdfs:label "Claude 3 ARCO Assessment Documentation" ;
  rdfs:comment "Evidence-only assessment documentation. No Annex III 1(a) applicability is asserted or inferred without all three gates." ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :EUAIAct_AnnexIII ;
  iao:0000136 :EUAIAct_Article50 ;
  iao:0000136 :EUAIAct_ChapterV .

:Claude3_RefusalBehaviorReport rdf:type :AssessmentDocumentation ;
  rdfs:label "Claude 3 Refusal Behavior Report" ;
  rdfs:comment "Evidence artifact documenting refusal to identify people in images. This is a documented constraint and does not assert biometric capability." ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :RemoteBiometricIdentificationProcess .

:Claude3_Compliance_Determination rdf:type :ComplianceDetermination ;
  rdfs:label "Claude 3 Compliance Determination" ;
  rdfs:comment "Current result: AnnexIII1aApplicableSystem is not entailed from asserted evidence in this instance layer." ;
  iao:0000136 :Claude3_System ;
  iao:0000136 :EUAIAct_AnnexIII .
