@prefix :    <https://arco.ai/ontology/core#> .
@prefix bfo: <http://purl.obolibrary.org/obo/BFO_> .
@prefix ro:  <http://purl.obolibrary.org/obo/RO_> .
@prefix iao: <http://purl.obolibrary.org/obo/IAO_> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:<http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .

<https://arco.ai/ontology/core> rdf:type owl:Ontology ;
  rdfs:label "ARCO Core (Gold Standard) — BFO/RO Aligned" ;
  rdfs:comment "Core ontology with OWL restrictions for computable reasoning + ICE-to-Reality grounding (IAO is_about) in an NCOR realism style. Uses ro:0000091 (has_disposition) per RO best practices." .

#################################################################
# 1) REALITY-SIDE UNIVERSALS (BFO)
#
# Design Decision: We use ro:0000091 (has_disposition) rather than
# ro:0000053 (bearer_of) because:
#   - has_disposition is more specific in the RO property hierarchy
#   - has_disposition has domain: independent continuant, range: disposition
#   - bearer_of is generic (covers qualities, roles, functions, dispositions)
#   - This aligns with OBO Foundry best practices
#################################################################

:System rdf:type owl:Class ;
  rdfs:label "AI System" ;
  rdfs:subClassOf bfo:0000027 ; # Object Aggregate
  rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty bfo:0000051 ; # has part
    owl:someValuesFrom :HardwareComponent
  ] .

:HardwareComponent rdf:type owl:Class ;
  rdfs:label "Hardware Component" ;
  rdfs:subClassOf bfo:0000030 ; # Object
  rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ro:0000091 ; # has disposition (RO-specific)
    owl:someValuesFrom :CapabilityDisposition
  ] .

:ModelComponent rdf:type owl:Class ;
  rdfs:label "Model Component" ;
  rdfs:comment "A trained AI model (weights + architecture) deployed as a functional component of a system. Treated as a BFO Object: a bounded, identifiable artifact that bears capability-dispositions independent of realization." ;
  rdfs:subClassOf bfo:0000030 ; # Object
  rdfs:subClassOf [
    a owl:Restriction ;
    owl:onProperty ro:0000091 ; # has disposition (RO-specific)
    owl:someValuesFrom :CapabilityDisposition
  ] .

:CapabilityDisposition rdf:type owl:Class ;
  rdfs:label "AI Capability Disposition" ;
  rdfs:subClassOf bfo:0000016 . # Disposition

:BiometricIdentificationCapability rdf:type owl:Class ;
  rdfs:label "Biometric Identification Capability" ;
  rdfs:comment "A capability-disposition whose realizations include identifying or verifying individuals via biometric characteristics." ;
  rdfs:subClassOf :CapabilityDisposition .

#################################################################
# 1b) FRONTIER AI CAPABILITY DISPOSITIONS
#
# Model the capabilities of general-purpose AI systems (e.g.
# Claude 3, GPT-4) that trigger regulatory obligations under
# EU AI Act Annex III, Article 50, and GPAI provisions (Ch. V).
#################################################################

:GeneralPurposeAICapability rdf:type owl:Class ;
  rdfs:label "General-Purpose AI Capability" ;
  rdfs:comment "Capability-disposition of a foundation/frontier model adaptable to tasks not fully specified at training time. Triggers GPAI obligations under EU AI Act Chapter V." ;
  rdfs:subClassOf :CapabilityDisposition .

:MultimodalCapability rdf:type owl:Class ;
  rdfs:label "Multimodal Capability" ;
  rdfs:comment "Capability-disposition for processing and generating content across multiple modalities (text, vision, audio). When vision is included, the system bears latent biometric identification capability." ;
  rdfs:subClassOf :GeneralPurposeAICapability .

:VisionCapability rdf:type owl:Class ;
  rdfs:label "Vision Capability" ;
  rdfs:comment "Capability-disposition for processing and interpreting visual inputs (images, documents, video). Subsumes potential biometric identification use via facial/body recognition." ;
  rdfs:subClassOf :MultimodalCapability ;
  rdfs:subClassOf :BiometricIdentificationCapability .

:AutonomousAgentCapability rdf:type owl:Class ;
  rdfs:label "Autonomous Agent Capability" ;
  rdfs:comment "Capability-disposition for autonomous tool use, computer interaction, and multi-step task execution without continuous human oversight. Risk trigger for critical infrastructure and safety-critical applications." ;
  rdfs:subClassOf :GeneralPurposeAICapability .

:ComputerUseCapability rdf:type owl:Class ;
  rdfs:label "Computer Use Capability" ;
  rdfs:comment "Capability-disposition for directly operating computer interfaces (mouse, keyboard, screen reading). Realization of autonomous agent capability with direct system access." ;
  rdfs:subClassOf :AutonomousAgentCapability .

:ContentGenerationCapability rdf:type owl:Class ;
  rdfs:label "Content Generation Capability" ;
  rdfs:comment "Capability-disposition for generating text, code, or synthetic media. Triggers transparency obligations under EU AI Act Article 50." ;
  rdfs:subClassOf :GeneralPurposeAICapability .

:CodeGenerationCapability rdf:type owl:Class ;
  rdfs:label "Code Generation Capability" ;
  rdfs:comment "Capability-disposition for generating, analyzing, and modifying software code. Implications for software supply chain and critical infrastructure." ;
  rdfs:subClassOf :ContentGenerationCapability .

:ReasoningCapability rdf:type owl:Class ;
  rdfs:label "Reasoning Capability" ;
  rdfs:comment "Capability-disposition for multi-step logical reasoning, analysis, and problem-solving. Enabler for autonomous agent behavior and high-risk domain application." ;
  rdfs:subClassOf :GeneralPurposeAICapability .

:MultilingualCapability rdf:type owl:Class ;
  rdfs:label "Multilingual Capability" ;
  rdfs:comment "Capability-disposition for processing and generating content across multiple natural languages. Expands jurisdictional scope of deployment." ;
  rdfs:subClassOf :GeneralPurposeAICapability .

:OperationalProcess rdf:type owl:Class ;
  rdfs:label "Operational Process" ;
  rdfs:subClassOf bfo:0000015 ; # Process
  rdfs:subClassOf
    [ a owl:Restriction ; owl:onProperty ro:0000057 ; owl:someValuesFrom :System ] ,                 # has participant
    [ a owl:Restriction ; owl:onProperty bfo:0000055 ; owl:someValuesFrom :CapabilityDisposition ] . # realizes

#################################################################
# 2) REPRESENTATION-SIDE UNIVERSALS (IAO)
#################################################################

:InformationOutput rdf:type owl:Class ;
  rdfs:label "Information Output" ;
  rdfs:subClassOf iao:0000030 . # Information Content Entity

:RegulatoryContent rdf:type owl:Class ;
  rdfs:label "Regulatory Content" ;
  rdfs:subClassOf iao:0000030 . # Information Content Entity

:ComplianceDetermination rdf:type owl:Class ;
  rdfs:label "Compliance Determination Result" ;
  rdfs:comment "Structured result of a compliance assessment (e.g., High-Risk, Limited-Risk, Prohibited)." ;
  rdfs:subClassOf iao:0000030 . # Information Content Entity

:HighRiskDetermination rdf:type owl:Class ;
  rdfs:label "High-Risk Determination" ;
  rdfs:comment "A compliance determination that classifies a system as high-risk. Can be asserted when documenting an inferred HighRiskSystem classification." ;
  rdfs:subClassOf :ComplianceDetermination .

#################################################################
# 3) INFERRED CLASSIFICATION - Bridge Axioms
#
# These axioms enable the reasoner to INFER high-risk status
# rather than requiring it to be explicitly asserted.
#
# CRITICAL: Uses ro:0000091 (has_disposition) to match instance data
#################################################################

:AnnexIIITriggeringCapability rdf:type owl:Class ;
  rdfs:label "Annex III Triggering Capability" ;
  rdfs:comment "A capability disposition that triggers high-risk classification under EU AI Act Annex III. Union of all capability types that map to Annex III categories." ;
  owl:equivalentClass [
    rdf:type owl:Class ;
    owl:unionOf (
      :BiometricIdentificationCapability   # Annex III 1(a) — remote biometric identification
      :AutonomousAgentCapability            # Annex III 2    — critical infrastructure management
    )
  ] .

:GPAISystemicRiskCapability rdf:type owl:Class ;
  rdfs:label "GPAI Systemic Risk Capability" ;
  rdfs:comment "A general-purpose AI capability meeting the systemic risk threshold under EU AI Act Article 51. Triggered by high-impact capabilities (10^25 FLOP threshold or equivalent)." ;
  owl:equivalentClass [
    rdf:type owl:Class ;
    owl:intersectionOf (
      :GeneralPurposeAICapability
      [ rdf:type owl:Restriction ;
        owl:onProperty :hasSystemicRiskIndicator ;
        owl:someValuesFrom :SystemicRiskIndicator
      ]
    )
  ] .

:SystemicRiskIndicator rdf:type owl:Class ;
  rdfs:label "Systemic Risk Indicator" ;
  rdfs:comment "An information entity documenting evidence of systemic risk (e.g. compute threshold, capability evaluation results, red-team findings)." ;
  rdfs:subClassOf iao:0000030 .

:hasSystemicRiskIndicator rdf:type owl:ObjectProperty ;
  rdfs:label "has systemic risk indicator" ;
  rdfs:domain :GeneralPurposeAICapability ;
  rdfs:range :SystemicRiskIndicator .

:HighRiskSystem rdf:type owl:Class ;
  rdfs:label "High-Risk AI System" ;
  rdfs:comment "A system classified as high-risk by virtue of having a component that bears a disposition triggering Annex III. This class membership is INFERRED by the reasoner." ;
  owl:equivalentClass [
    rdf:type owl:Class ;
    owl:intersectionOf (
      :System
      [ rdf:type owl:Restriction ;
        owl:onProperty bfo:0000051 ; # has part
        owl:someValuesFrom [
          rdf:type owl:Restriction ;
          owl:onProperty ro:0000091 ; # has disposition (ALIGNED WITH INSTANCES)
          owl:someValuesFrom :AnnexIIITriggeringCapability
        ]
      ]
    )
  ] .

