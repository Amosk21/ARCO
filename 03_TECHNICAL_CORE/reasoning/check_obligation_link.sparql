PREFIX : <https://arco.ai/ontology/core#>
PREFIX iao: <http://purl.obolibrary.org/obo/IAO_>

#################################################################
# check_obligation_link.sparql
#
# PURPOSE: Audit-only check that a compliance obligation
#   specification exists linking the system to a responsible
#   role (provider or deployer).
#
# This verifies the "who bears responsibility" foundation:
#   - An obligation artifact is about the system
#   - The same artifact is about a ProviderRole (or DeployerRole)
#################################################################

ASK WHERE {
  ?obligation a :ComplianceObligationSpecification ;
    iao:0000136 :Sentinel_ID_System ;
    iao:0000136 ?role .
  ?role a :ProviderRole .
}
